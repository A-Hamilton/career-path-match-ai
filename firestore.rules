rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      // Users can only read/write their own subcollections
      match /resumes/{resumeId} {
        allow read, write: if request.auth.uid == userId;
        
        // Allow access to analysis subcollection
        match /analysis/{analysisId} {
          allow read, write: if request.auth.uid == userId;
        }
      }
      
      match /experience/{experienceId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /education/{educationId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /savedJobs/{jobId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /careerPaths/{pathId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /savedSearches/{searchId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /applications/{applicationId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
